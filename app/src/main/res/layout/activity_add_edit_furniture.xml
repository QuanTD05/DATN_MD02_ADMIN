<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="#FDF8F2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Ảnh chính -->
        <ImageView
            android:id="@+id/img_selected"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ic_chat"
            android:contentDescription="Ảnh chính" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tải ảnh lên"
            android:textColor="#444"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- Loại nội thất -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loại nội thất(*)"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="6dp" />
        <Spinner
            android:id="@+id/spinner_type"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_edittext_light" />

        <!-- Tên nội thất -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên nội thất(*)"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp" />
        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Nhập tên sản phẩm"
            android:background="@drawable/bg_edittext_light"
            android:padding="12dp" />

        <!-- Mô tả -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mô tả(*)"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp" />
        <EditText
            android:id="@+id/edt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:hint="Nhập mô tả sản phẩm"
            android:background="@drawable/bg_edittext_light"
            android:padding="12dp" />

        <!-- Giá -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá(*)"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp" />
        <EditText
            android:id="@+id/edt_price"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="VD: 1599000"
            android:inputType="numberDecimal"
            android:background="@drawable/bg_edittext_light"
            android:padding="12dp" />




        <!-- Biến thể -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Biến thể"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="6dp" />
        <LinearLayout
            android:id="@+id/layout_variants_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <Button
            android:id="@+id/btn_add_variant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Thêm biến thể"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/teal_700"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal" />

        <!-- Nút hoàn thành -->
        <Button
            android:id="@+id/btn_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hoàn thành"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp"

            android:layout_gravity="center" />

    </LinearLayout>
</ScrollView>
