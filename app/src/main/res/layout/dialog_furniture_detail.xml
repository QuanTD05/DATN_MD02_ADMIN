<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="20dp" android:background="@android:color/white">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <!--  Ảnh sản phẩm  -->
        <ImageView android:id="@+id/img_detail" android:layout_width="match_parent" android:layout_height="200dp" android:scaleType="centerCrop" android:background="#E0E0E0"/>
        <!--  Tên sản phẩm  -->
        <TextView android:id="@+id/tv_detail_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Tên sản phẩm" android:textSize="18sp" android:textStyle="bold" android:layout_marginTop="12dp"/>
        <!--  Loại  -->
        <TextView android:id="@+id/tv_detail_type" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Loại: Bàn" android:textSize="14sp" android:layout_marginTop="4dp"/>
        <!--  Giá  -->
        <TextView android:id="@+id/tv_detail_price" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Giá: 1.000.000 đ" android:textSize="14sp" android:layout_marginTop="4dp"/>
        <!--  Đánh giá  -->
        <TextView android:id="@+id/tv_detail_rating" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Đánh giá: 4.5 sao" android:textSize="14sp" android:layout_marginTop="4dp"/>
        <!--  Mô tả  -->
        <TextView android:id="@+id/tv_detail_description" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Mô tả chi tiết sản phẩm..." android:textSize="14sp" android:layout_marginTop="8dp"/>
        <!--  Tiêu đề biến thể  -->
        <TextView android:id="@+id/tv_variants_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Biến thể:" android:textStyle="bold" android:textSize="16sp" android:layout_marginTop="12dp"/>
        <!--  Danh sách biến thể  -->
        <LinearLayout android:id="@+id/variant_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginTop="4dp">
            <!--  Các TextView biến thể sẽ được add động từ Java  -->
        </LinearLayout>
    </LinearLayout>
</ScrollView>